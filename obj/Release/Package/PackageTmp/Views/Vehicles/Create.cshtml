@model Chair80CP.Models.tbl_vehicles

@{
    ViewBag.Title = "Create";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li>

                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("Create", "Vehicles", FormMethod.Post, new { @class = "ajaxform", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <label for="model">Model</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.EditorFor(model => model.model, new { htmlAttributes = new { @class = "form-control", placeholder = "model", required = "required" } })

                                </div>
                            </div>

                            <label for="color">Color</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.EditorFor(model => model.color, new { htmlAttributes = new { @class = "form-control", placeholder = "color", required = "required" } })

                                </div>
                            </div>

                            <label for="capacity">Capacity</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.EditorFor(model => model.capacity, new { htmlAttributes = new { @class = "form-control", placeholder = "capacity", required = "required" } })

                                </div>
                            </div>
                           
                                    <input type="hidden" name="owner_id" value="@ViewBag.owner_id" />
                                
                            <label for="license_no">license No</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.EditorFor(model => model.license_no, new { htmlAttributes = new { @class = "form-control", placeholder = "license_no", required = "required" } })

                                </div>
                            </div>
                            <fieldset>
                                <legend>Images</legend>
                                <div class="img-upload">
                                    <input type="file" name="img1" value="" accept=".gif,.jpg,.png,.jpeg" />
                                </div>
                                <div class="img-upload">
                                    <input type="file" name="img2" value="" accept=".gif,.jpg,.png,.jpeg" />
                                </div>
                                <div class="img-upload">
                                    <input type="file" name="img3" value="" accept=".gif,.jpg,.png,.jpeg" />
                                </div>
                                <div class="img-upload">
                                    <input type="file" name="img4" value="" accept=".gif,.jpg,.png,.jpeg" />
                                </div>
                            </fieldset>

                            <div class="form-action">
                                <button type="submit" class="btn btn-success create">Create</button>
                                @*@Html.ActionLink("Back to List", "Index", "Vehicles", new { }, new { @class = "btn btn-primary back" })*@
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
