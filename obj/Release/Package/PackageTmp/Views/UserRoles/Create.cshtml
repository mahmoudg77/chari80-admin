@model Chair80CP.Models.sec_users_roles

@{
    ViewBag.Title = "Create";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li>

                    </li>
                </ul>
            </div>
            <div class="body">
                <h2 class="card-inside-title">Create</h2>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("Create", "UserRoles", FormMethod.Post, new { @class = "ajaxform" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <label for="user_id">user_id</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.DropDownList("user_id", null, htmlAttributes: new { @class = "form-control show-tick", placeholder = "user_id" })

                                </div>
                            </div>

                            <label for="role_id">role_id</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.DropDownList("role_id", null, htmlAttributes: new { @class = "form-control show-tick", placeholder = "role_id" })

                                </div>
                            </div>

                            <div class="form-action">
                                <button type="submit" class="btn btn-success create">Create</button>
                                @Html.ActionLink("Back to List", "Index", "UserRoles", new { }, new { @class = "btn btn-primary back" })
                            </div>
                        }
                    </div>
</div>
</div>
</div>
</div>

