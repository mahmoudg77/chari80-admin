@model Chair80CP.Models.vwProfile

@using Chair80CP.Libs
@{
    ViewBag.Title = "Details";
}
<div class="row">

    <div class="col-xs-12 col-sm-3">
        <div class="card profile-card">
            <div class="profile-header">&nbsp;</div>
            <div class="profile-body">
                <div class="image-area">
                    <img src="@Settings.Get("api_url")/img/crope/tbl_accounts/@Model.id/150x150/main-last.gif" alt="AdminBSB - Profile Image">
                </div>
                <div class="content-area">
                    <h3>@Model.first_name @Model.last_name</h3>
                    <p>
                        @if (Model.is_driver > 0)
                        {<span>Vehicle Driver</span>}, @if (Model.is_owner > 0)
                        {<span>Transport Owner</span>}
                    </p>
                    <p><a href="mailto:@Model.email">@Model.email</a></p>
                </div>
            </div>
            <div class="profile-footer">
                <ul>
                    <li>
                        <span>Drive Cars</span>
                        <span>@Model.DriveVehicles</span>
                    </li>
                    <li>
                        <span>Own's cars</span>
                        <span>@Model.MyVehicles</span>
                    </li>
                    <li>
                        <span>Rate</span>
                        <span>4/5</span>
                    </li>
                </ul>
            </div>
        </div>
        @*<div class="card card-about-me">
            <div class="header">
                <h2>ABOUT ME</h2>
            </div>
            <div class="body">
              
            </div>
        </div>*@
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="card">
            <div class="body">
                <div>

                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="/Profiles/about?id=@Model.id" aria-controls="home" role="tab" data-toggle="tab" aria-expanded="true" class="ajax-link" data-target="#content">about</a></li>
                        <li role="presentation" class=""><a href="/Profiles/docs?id=@Model.id" aria-controls="home" role="tab" data-toggle="tab" aria-expanded="true" class="ajax-link" data-target="#content">Documents</a></li>
                        <li role="presentation" class=""><a href="/TripSharedDetails/?driver=@Model.id" aria-controls="home" role="tab" data-toggle="tab" aria-expanded="true" class="ajax-link" data-target="#content">Shared Trips</a></li>
                        <li role="presentation" class=""><a href="/TripRequestedDetails/?rider=@Model.id" aria-controls="home" role="tab" data-toggle="tab" aria-expanded="true" class="ajax-link" data-target="#content">Requested Trips</a></li>
                        <li role="presentation" class=""><a href="/Vehicles/GetField/@Model.id/Vehicles-Drive" aria-controls="settings" role="tab" data-toggle="tab" aria-expanded="false" class="ajax-link" data-target="#content">Vehicles</a></li>
                    </ul>
                    <div class="tab-content">

                        <div role="tabpanel" class="tab-pane active" id="content">

                        </div>
                    </div>

                   
                </div>
            </div>
        </div>
    </div>
</div>
