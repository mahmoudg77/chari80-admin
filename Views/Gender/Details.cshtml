@model Chair80CP.Models.tbl_genders

@{
    ViewBag.Title = "Details/Gender";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <u class="header-dropdown m-r--5">
                     
                </u>

            </div>
            <div class="body">
                <div>
                    @foreach (var item in Chair80CP.Libs.General.getLangData(Model.name))
                    {

                    <dl class="dl-horizontal">
                        <dt>
                            <label class="control-label col-md-3">Name (@item.Key)</label>
                        </dt>

                        <dd>
                            @item.Value
                        </dd>
                    </dl>
                    }
                </div>

                <p>
                    @Html.ActionLink("Edit", "Edit", "Gender", new { id = Model.id }, new { @class = "btn btn-success btn-md edit" })
                    @Html.ActionLink("Back to List", "Index", "Gender", new { }, new { @class = "btn btn-primary btn-md back" })
                </p>
</div>
</div>

</div>
</div>
