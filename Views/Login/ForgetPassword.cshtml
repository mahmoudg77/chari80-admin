
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<form id="forgot_password" method="POST">
    <div class="msg">
        <p class="alert alert-info">
            <strong>Sorry:</strong> You cannot reset password from the browser, You have to use mobile application and login by mobile then change password.
        </p>

       <table class="table">
        <tr>
           <td>
               <a href="https://play.google.com/store/apps/details?id=com.chari80.chari80">
                   <i style="color:#51a538;font-size:90px" class="material-icons">
                       android
                   </i>
               </a>
           </td>
           <td>
               <a href="https://apps.apple.com/eg/app/id/com.chari80">
                   <img src="data:image/png;base64,">               
               </a>
           </td>
         </tr>
       </table>
    </div>
    
    <div class="row m-t-20 m-b--5 align-center">
        <a href="/Login">Sign In!</a>
    </div>
</form>


