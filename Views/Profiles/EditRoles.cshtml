@model Chair80CP.Models.vwProfile
@using Chair80CP.Libs

@using Chair80CP.BLL

@{
    ViewBag.Title = "EditRoles";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li>

                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="col-md-2">
                            <img src="@Settings.Get("api_url")/img/crope/tbl_accounts/@Model.id/100x100/main-last.gif" class="img-circle">
                        </div>
                        <div class="col-md-10">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.id);
                                <label for="name">Name</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Model.first_name @Model.last_name
                                    </div>
                                </div>
                                <label for="name">Email</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Model.email
                                    </div>
                                </div>
                                <label for="name">Mobile</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @Model.mobile
                                    </div>
                                </div>
                                <label for="name">Roles</label>
                                <div class="form-group row">
                                    <div class="form-line ">
                                        @foreach (var role in ViewBag.roles)
                                        {
                                            <dic class="col col-lg-3">

                                            <input type="checkbox" id="@role.name" name="roles[]" class="filled-in" value="@role.id" @(ViewBag.selected_roles.Contains(role.id) ? "checked" : "")>
                                            <label for="@role.name">@role.name</label>
                                            </dic>

                                        }
                                    </div>
                                </div>

                                <div class="form-action">
                                    <button type="submit" class="btn btn-success create">Save</button>
                                </div>

                            }

                        </div>

                        
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


