@model Chair80CP.Models.tbl_cities

@{
    ViewBag.Title = "Create/Country";
}



<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li>

                    </li>
                </ul>
            </div>
            <div class="body">
                <h2 class="card-inside-title">@ViewBag.Title</h2>
                <div class="row clearfix">
                    <div class="col-sm-12">


                        @using (Html.BeginForm("Create", "City", FormMethod.Post, new { @class = "ajaxform general-validate" }))
                        {
                            @Html.AntiForgeryToken()

                            foreach (string lang in Chair80CP.BLL.GlobalData.Languages)
                            {
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="name[@lang]" value="" placeholder="Name (@lang)" required="" />
                                </div>
                             </div>
                            }
                            <div class="form-group">
                                     @Html.DropDownList("country_id", null, htmlAttributes: new { @class = "form-control show-tick", required = "" })


                             </div>
                            <div class="form-action">
                                <button type="submit" class="btn btn-success create">Create</button>
                                @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary back" })
                            </div>
                        }

                        <div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

