@model Chair80CP.Models.sec_roles

@{
    ViewBag.Title = "Create";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li>

                    </li>
                </ul>
            </div>
            <div class="body">
                <h2 class="card-inside-title">Create</h2>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("Create", "SecRoles", FormMethod.Post, new { @class = "ajaxform general-validate" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <label for="name">name</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "name" } })

                                </div>
                            </div>

                            <label for="role_key">role_key</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.EditorFor(model => model.role_key, new { htmlAttributes = new { @class = "form-control", placeholder = "role_key" } })

                                </div>
                            </div>

                            <label for="description">description</label>
                            <div class="form-group">
                                <div class="form-line">

                                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "description" } })

                                </div>
                            </div>

                            <div class="form-action">
                                <button type="submit" class="btn btn-success create">Create</button>
                                @Html.ActionLink("Back to List", "Index", "SecRoles", new { }, new { @class = "btn btn-primary back" })
                            </div>
                        }
                    </div>
</div>
</div>
</div>
</div>

