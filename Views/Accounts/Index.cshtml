}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <u class="header-dropdown m-r--5">
                    <li>
                        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary btn-md addnew " })
