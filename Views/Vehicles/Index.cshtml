@model IEnumerable<Chair80CP.Models.vwVehicles>
@using Chair80CP.Libs
@{
    ViewBag.Title = "Vehicles";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <ul class="header-dropdown m-r--5">
                    @if (ViewBag.AllowAdd!=false)
                    {
                    <li>

                        <a class = "btn btn-primary btn-md addnew "  href="/Vehicles/Create?@ViewBag.query">Create New</a>
                    </li>
                    }

                </ul>

            </div>
            <div class="body">
                <div class="table-responsive">
    <div class="table-responsive">
        <table class="table table-striped table-hover js-basic-example dataTable">
            <thead>
                <tr>
        <th>
            Model
        </th>
        <th>
            Color
        </th>
        <th>
           Capacity
        </th>
        <th>
            Register Time
        </th>
        <th>
            Owner
        </th>
        <th>
            license No
        </th>
        <th>
            Drivers
        </th>
       
        <th></th>
    </tr>
	</thead>
@foreach (var item in Model) {
    <tr>
        <td>
            <a href="/Vehicles/Details/@item.id">
                <img src="@Settings.Get("api_url")/img/crope/tbl_vehicles/@item.id/30x30/main-last.gif" class="img-circle img-profile">

                @item.model
                </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.created_at)
        </td>
         
        <td>
            <a href="/Profiles/Details/@item.owner_id">

                <img src="@Settings.Get("api_url")/img/crope/tbl_accounts/@item.owner_id/30x30/main-last.gif" class="img-circle img-profile">
                @item.owner
        </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.license_no)
        </td>
        <td>
            <a class="details" href="/Vehicles/GetField/@item.id/Vehicles-Drive">

                @Html.DisplayFor(modelItem => item.Drivers)
            </a>
        </td>
       
        
		<td>
            @Html.ActionLink("edit", "Edit", "Vehicles", new { id = item.id }, new { @class = "btn text-success material-icons edit" })
            @Html.ActionLink("remove_red_eye", "Details", "Vehicles", new { id = item.id }, new { @class = "btn material-icons details" })
            @Html.ActionLink("delete", "Delete", "Vehicles", new { id = item.id}, new { @class = "btn text-danger material-icons delete" })
        </td>
			
    </tr>
}

</table>
</div>

                </div>            
            </div>
</div>
</div>
