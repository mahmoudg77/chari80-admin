@model IEnumerable<Chair80CP.Models.trip_request_details>
@using Chair80CP.Libs
@{
    ViewBag.Title = "Index";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewBag.Title
                </h2>
                <u class="header-dropdown m-r--5">
                    <li>
                        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary btn-md addnew " })
                    </li>
                </u>

            </div>
            <div class="body">
                <div class="table-responsive">
    <div class="table-responsive">
        <table class="table table-striped table-hover js-basic-example dataTable">
            <thead>
                <tr>
                    <th>
                        Seats
                    </th>
                    <th>
                       Date
                    </th>
                    <th>
                        Time
                    </th>
                    <th>
                        Kick Off
                    </th>
                   
                    <th>
                        Destination
                    </th>
                    <th>
                       Gender
                    </th>
                    <th>
                        Seat Cost
                    </th>
                    
                    <th>
                        Direction
                    </th>
                     
                    <th>
                        Booked?
                    </th>
                    
                    <th></th>
                </tr>
	</thead>
@foreach (var item in Model) {
            <tr>
                <td>
                    @item.seats
                </td>
                <td>
                    @(item.start_at_date != null ? item.start_at_date.Value.ToString("yyyy-MM-dd") : "")
                </td>
                <td>
                    @(item.start_at_date != null ? item.start_at_date.Value.ToString("hh:mm tt") : "")
                </td>
                <td>
                    @item.from_plc
                </td>
                <td>
                   @item.to_plc
                </td>
                
                <td>
                    @item.tbl_genders.name.local()
                </td>
                <td>
                    @item.seat_cost_from
                     -
                    @item.seat_cost_to
                </td>
                <td>
                    <i class="material-icons">@(item.trip_direction == 1 ? "call_made" : "call_received")</i> 
                </td>
                
                <td>
                    @(item.booked==true?"Yes":"No")
                </td>
               
                <td>
                    @Html.ActionLink("remove_red_eye", "Details", new { id = item.id }, new { @class = "btn material-icons details" })
                    @Html.ActionLink("delete", "Delete", new { id = item.id }, new { @class = "btn text-danger material-icons delete" })
                </td>

            </tr>
}

</table>
</div>

                </div>            
            </div>
</div>
</div>
